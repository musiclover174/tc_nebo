.footer
  pos relative
  z-index 1
  border-top 1px solid $gblue
  bgc white
  pt 70px
  pb 60px
  @media $LandscapeMin
    pt 48px
    pb 40px
  &__logo
    max-width 90%
  &__row
    df()
    ml -15px
    mr -15px
    flex-wrap wrap
    @media $desktopMedium
      ml -10px
      mr -10px
  &__col
    padding 0 15px
    @media $desktopMedium
      padding 0 10px
    @media $PortraitMedium
      flex 0 0 100%
      max-width 100%
    @media (max-width:767px) and (min-width:501px)
      flex 0 0 50%
      max-width 50%
      &:last-child
        text-align right
    @media $LandscapeMin
      &_menu
        dn()
    @media $LandscapeMinFrom
      &_col3
        flex 0 0 25%
        max-width 25%
  &__copy
    margin 30px 0 35px
    fontify 16px 400 26px
    @media $LandscapeMin
      margin 15px 0 20px
  &__nav
    mt -7px
  &__item
    & + &
      mt 19px
    &-href
      color black
      fontify 16px 700 26px
      border-bottom 1px solid transparent
      transition .7s border-color
      &:hover,
      &_active
        border-color $red
  &__actions
    dfv()
    mt -4px
    @media $LandscapeMin
      align-items flex-end
    @media $PortraitMedium
      dn()
  &__subs
    pos relative
    ml 29px
    mt 27px
    fontify 16px 400 18px
    border-bottom 1px dashed currentColor
    transition .7s border
    @media $LandscapeMin
      mt 17px
    span
      @media $desktopMedium
        dn()
    &:hover
      border-color transparent
    &:before
      content ""
      pos absolute
      l -30px
      t 1px
      size 21px 15px
      background url('data:image/png;base64,') no-repeat center
  &__search
    pos relative
    ml 29px
    fontify 16px 400 18px
    border-bottom 1px dashed currentColor
    transition .7s border
    &:hover
      border-color transparent
    &:before
      content ""
      pos absolute
      l -28px
      t 1px
      size 16px 17px
      background url('data:image/png;base64,') no-repeat center
  &__dextra
    ib()
    mt 69px
    ml 81px
    pos relative
    text-align left
    color black
    font-family Verdana, Geneva, sans-serif
    fontify 9px 400 14px
    text-transform uppercase
    letter-spacing 0.18em
    @media $LandscapeMin
      mt 45px
    @media $PortraitMedium
      mt 27px
    span
      pos absolute
      t 3px
      r calc(100% + 11px)
      bgc $red
      color white
      font-family Arial
      fontify 12px 900 21px
      text-transform uppercase
      letter-spacing 0.1em
      padding 0 4px
      transition 0.7s background
    &:hover span
      background-color $dred