.page404
  max-width 630px
  margin -40px auto 0
  text-align center
  @media $LandscapeMin
    margin 0 auto
  h1:not([class])
    margin 22px 0 21px
    fontify 44px 900 50px
    @media $desktopMedium
      fontify 40px 700 44px
    @media $PortraitMax
      fontify 30px 700 34px
  &__img
    max-width 100%
    ml 30px
    @media $LandscapeMin
      ml 0

.map
  max-width 470px
  margin 67px auto 0
  text-align center
  &__title
    c $dark
    fontify 26px 700 30px
    mb 29px
  &__item
    & + &
      mt 28px
    &-href
      c $dark
      fontify 18px 400 25px
      border-bottom 1px solid $blue
      transition .7s border-color
      &_main
        font-weight 700
      &:hover
        border-color transparent
  &__sublist
    mt 10px
    &-item
      & + &
        mt 10px