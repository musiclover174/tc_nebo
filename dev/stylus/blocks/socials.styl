.socials
  df()
  &__item
    & + &
      ml 10px
  &__href
    db()
    pos relative
    size 24px
    border 1px solid alpha(#252525, .5)
    border-radius 50%
    transition .7s background, .7s border-color
    &:before
      content ""
      pos absolute
      background-position center
      background-repeat no-repeat
      transition .7s filter
    &[data-type="fb"]:before
      size 6px 12px
      background url('data:image/png;base64,') no-repeat center
      t 5px
      l 8px
    &[data-type="od"]:before
      size 8px 13px
      background-image url('data:image/png;base64,')
      t 4px
      l 7px
    &[data-type="vk"]:before
      size 13px 8px
      background-image url('data:image/png;base64,')
      t 7px
      l 4px
    &:hover
      bgc black
      border-color black
      &:before
        filter brightness(100%) invert(1)

.header .socials
  justify-content flex-end